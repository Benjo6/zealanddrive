<Application
    x:Class="ZealandDrive.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZealandDrive"
    RequestedTheme="Light">
    <Application.Resources>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Background" Value="#DE4EAA" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <Style x:Key="GridStyle" TargetType="Grid">
            <Setter Property="Column" Value="0" />
            <Setter Property="Column" Value="1" />
            <Setter Property="Column" Value="2" />
            <Setter Property="Column" Value="3" />

            <Setter Property="Row" Value="0" />
        </Style>


    </Application.Resources>
</Application>

