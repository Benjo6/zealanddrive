<Page
    x:Class="ZealandDrive.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ZealandDrive.VM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush ImageSource="/View-En/Assets/Not_logget_in_@1x.png" />
    </Page.Background>
    <Page.DataContext>
        <local:UserVM />
    </Page.DataContext>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition />

        </Grid.RowDefinitions>
        <StackPanel
            Width="400"
            Margin="0,0,0,120"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Image
                Height="100"
                VerticalAlignment="Bottom"
                Source="Assets\zealand-DRIVE-NEW-logo(hvid).png" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="50"
                Foreground="White"
                HorizontalTextAlignment="Center"
                Text="Velkommen til" />
            <TextBlock
                Height="64"
                Margin="26,0,26,0"
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="White"
                HorizontalTextAlignment="Center"
                Text="Hvorfor køre alene, når du kan køre med andre? Opret din bruger i dag, og kør sammen med dine klassekammerater allerede i morgen."
                TextWrapping="WrapWholeWords" />
        </StackPanel>
        <StackPanel Margin="0,0,0,80" VerticalAlignment="Bottom">
            <TextBlock
                Width="400"
                Margin="0,0,0,15"
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="White"
                HorizontalTextAlignment="Center"
                Text="LOGIN ELLER OPRET EN PROFIL" />
            <Button
                Width="400"
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Background="#f2df80"
                BorderBrush="White"
                BorderThickness="3"
                Command="{Binding GoToLogin}"
                Content="LOGIN"
                CornerRadius="2"
                FontSize="18"
                FontWeight="Bold"
                Foreground="White" />
            <Button
                Margin="0,30,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="Transparent"
                Command="{Binding GoToOpretBruger}"
                Content="OPRET BRUGER"
                FontSize="18"
                FontWeight="Bold"
                Foreground="White" />
        </StackPanel>
