        <DatePicker
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Header="Hvilken dag kører du?"
            SelectedDate="{Binding RouteToBeCreated.date, Mode=TwoWay}"
            YearVisible="False" />


        <TextBox
            Grid.Row="6"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Width="300"
            Height="130"
            VerticalAlignment="Top"
            Background="#F6F6F6"
            CornerRadius="3"
            Header="Besked til alle der vil køre med?"
            Text="{Binding RouteToBeCreated.besked, Mode=TwoWay}" />

        <StackPanel
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <ComboBox
                Grid.Row="4"
                Grid.Column="1"
                Width="150"
                Header="Hvad tid kører du?"
                ItemsSource="{Binding H}"
                PlaceholderText="Timer"
                SelectedItem="{Binding RouteToBeCreated.hour, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            FontSize="12"
                            Text="{Binding}"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <ComboBox
                Grid.Row="4"
                Grid.Column="1"
                Width="150"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header=" "
                ItemsSource="{Binding M}"
                PlaceholderText="Minutter"
                SelectedItem="{Binding RouteToBeCreated.minute, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            FontSize="12"
                            Text="{Binding}"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>


        <Button
            Grid.Row="7"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Width="300"
            Height="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#F2DF80"
            Canvas.ZIndex="6"
            Command="{Binding CreateOneRute, Mode=TwoWay}"
            Content="OPRET RUTE"
            CornerRadius="7"
            FontWeight="Bold"
            Foreground="White" />
        <Button
            Grid.Row="0"
            Grid.Column="2"
            HorizontalAlignment="Left"
            Canvas.ZIndex="10"
            Command="{Binding LoadCar}"
            Content="Load biler" />
        <TextBlock
            Grid.Column="1"
            Margin="20,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Canvas.ZIndex="1"
            FontSize="20"
            FontWeight="Bold"
            Foreground="#F2DF80"
            Text="Opret Ruter" />
        <Rectangle
            Grid.ColumnSpan="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Fill="White" />




    </Grid>
</Page>

