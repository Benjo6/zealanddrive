                        </StackPanel>
                        <StackPanel  Width="5" Height="5" Margin="0,45,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Border  Width="5" Height="5" Background="#fff2df80" BorderBrush="#ff707070"   />
                        </StackPanel>
                    </Grid>
                    <Ellipse  Width="15" Height="15" Stretch="uniform" Fill="#fff2df80" Stroke="#ff707070" Canvas.Left="-2" Canvas.Top="0"  />
