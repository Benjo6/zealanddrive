                        <StackPanel  Width="5" Height="5" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Border  Width="5" Height="5" Background="#fff2df80" BorderBrush="#ff707070"   />
                        </StackPanel>
                        <StackPanel  Width="5" Height="5" Margin="0,9,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
